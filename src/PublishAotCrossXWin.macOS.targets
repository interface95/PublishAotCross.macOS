<Project>
  
  <!-- 自动配置默认路径 -->
  <PropertyGroup Condition="'$(PublishAotCrossPath)' == ''">
    <PublishAotCrossPath>$(HOME)/.local/share/PublishAotCrossXWin</PublishAotCrossPath>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(XWinCache)' == ''">
    <XWinCache>$(HOME)/.local/share/xwin-sdk/</XWinCache>
  </PropertyGroup>
  
  <!-- 导入 PublishAotCrossXWin 的核心逻辑 -->
  <!-- 优先使用本地安装的版本，否则使用 NuGet 包内的版本 -->
  <Import Project="$(PublishAotCrossPath)/src/PublishAotCrossXWin.targets" 
          Condition="Exists('$(PublishAotCrossPath)/src/PublishAotCrossXWin.targets')" />
  
  <!-- 如果本地没有，使用 NuGet 包自带的版本 -->
  <Import Project="$(MSBuildThisFileDirectory)PublishAotCrossXWin.targets" 
          Condition="!Exists('$(PublishAotCrossPath)/src/PublishAotCrossXWin.targets')" />
  
</Project>

